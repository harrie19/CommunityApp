/*
 Minimal root build.gradle.kts for a multi-module Android project.
 Plugin versions and resolution are handled in settings.gradle.kts pluginManagement.
 Keep module-specific plugin application in each module's build.gradle.kts.
*/
plugins {
    // intentionally empty
}

subprojects {
    // common JVM toolchain settings can go here if needed
    plugins.withId("org.jetbrains.kotlin.jvm") {
        kotlin {
            jvmToolchain(17)
        }
    }
}
